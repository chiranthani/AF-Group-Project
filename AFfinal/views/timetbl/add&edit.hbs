<!DOCTYPE html>
<h3>
    {{viewTitle}}
</h3>



<form action="/timetbl" method="post" autocomplete="off">
    <input type="hidden" name="_id" value="{{timetbl._id}}">
    <div class="form-group">


        <label>Date</label>
        <input type="date" pattern="(?:19|20)(?:(?:[13579][26]|[02468][048])-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))|(?:[0-9]{2}-(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-8])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:29|30))|(?:(?:0[13578]|1[02])-31)))"  class="form-control" name="date" value="{{timetbl.date}}"/>
        <div class="text-danger">{{timetbl.dateError}}</div>
    </div>
    <div class="form-row">


    <div class="form-group col-md-6">
        <label>from</label>
        <input type="time" placeholder="HH:MM Am/PM" pattern="(0[0-9]|1[0-9]|2[0-3])(:[0-5][0-9]){2}" class="form-control" name="from" value="{{timetbl.from}}"/>
        <div class="text-danger">{{timetbl.fromError}}</div>

    </div>
    <div class="form-group col-md-6">
        <label>To</label>
        <input type="time" placeholder="HH:MM Am/PM"  pattern="(0[0-9]|1[0-9]|2[0-3])(:[0-5][0-9]){2}" class="form-control" name="to" value="{{timetbl.to}}"/>
        <div class="text-danger">{{timetbl.toError}}</div>

    </div>
    </div>
    <div class="form-group">
        <label>Subject</label>
        <input type="text"  placeholder="SE3040 - Application Frameworks(Written/Online)" class="form-control" name="subjectName" value="{{timetbl.subjectName}}">
        <div class="text-danger">{{timetbl.subjectNameError}}</div>

    </div>



    <div class="form-group">
    <button onsubmit="checkDOB()" type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>&nbsp&nbsp
    <a class="btn btn-secondary" href="/timetbl/list"><i class="fa fa-list-alt"></i> View All</a>

    </div>

</form>
